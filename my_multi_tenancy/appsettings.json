    "DefaultConnection": "User ID=postgres;Password=Admin;Host=localhost;Port=5432;Database=multitenant1_dev_db;",
    "IdentityConnection": "User ID=postgres;Password=Admin;Host=localhost;Port=5432;Database=identity_db;",
    "AllowMultipleConnection": true
